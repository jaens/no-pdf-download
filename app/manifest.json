{
    "manifest_version": 2,
    "version": "2.1.0",

    "name": "No PDF Download - Improved",
    "short_name": "No PDF Download",
    "description": "Views all PDF files directly in the browser instead of downloading them. Fork of the original 'No PDF Download' extension.",
    "author": "Jaen",
    "homepage_url": "https://github.com/jaens/no-pdf-download",

    "permissions": ["storage", "webRequest", "webRequestBlocking", "<all_urls>"],

    "background": {
        "page": "/background.html"
    },

    "icons": {
        "128": "icon_128.png"
    },

    "browser_action": {
        "default_icon": {
            "128": "icon_128.png"
        },
        "default_title": "No PDF Download"
    },

    "applications": {
        "gecko": {
            "id": "no-pdf-download@github.com",
            "strict_min_version": "67.0"
        }
    }
}
